<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#980000"
                android:endColor="#980000"
                android:angle="180" />
            
         
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#980000"
                android:startColor="#980000"
                android:angle="270" />
            
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#A00000"
                android:startColor="#FF0000"
                android:angle="270" />
            
        </shape>
    </item>
</selector>